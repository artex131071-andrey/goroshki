# Оптимизация MySQL для WordPress + WooCommerce
# Последнее обновление: 2026-01-20
#
# Инструкция по применению:
# 1. Скопировать этот файл в /etc/mysql/conf.d/wordpress.cnf
# 2. Перезапустить MySQL: systemctl restart mysql

[mysqld]
# Основные настройки производительности
max_connections = 50
connect_timeout = 10
wait_timeout = 600
max_allowed_packet = 64M

# InnoDB настройки (оптимально для WooCommerce)
innodb_buffer_pool_size = 512M
innodb_log_file_size = 128M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT

# Query cache (для WordPress запросов)
query_cache_type = 1
query_cache_size = 64M
query_cache_limit = 2M

# Temporary tables
tmp_table_size = 64M
max_heap_table_size = 64M

# Логи медленных запросов
slow_query_log = 1
slow_query_log_file = /var/log/mysql/mysql-slow.log
long_query_time = 2

# Кодировка по умолчанию (UTF-8 для WordPress)
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
